
{
  "compilerOptions": {
    "target": "ES2015", 
    "module": "commonjs",
    "lib": ["es2017", "es7", "es6", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "allowJs": true,
    "outDir": "./dist",
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitThis": true,
    "sourceMap": true
  },
  "exclude": [
    "**/*.spec.ts",
    "node_modules",
    "cypress",
    "dist"
  ]
}
